  {
    "name": "scheme",
    "type": "String",
    "description": "Applies given scheme to URI set within the main string.",
    "examples": [
      "${'example.com/path/page.html' @ scheme='http'} -> http://example.com/path/page.html",
      "${'//example.com/path/page.html' @ scheme='http'} -> http://example.com/path/page.html",
      "${'http://example.com/path/page.html' @ scheme='https'} -> https://example.com/path/page.html"
    ],
    "link": "https://github.com/Adobe-Marketing-Cloud/htl-spec/blob/1.2/SPECIFICATION.md#125-uri-manipulation"
  },
  {
    "name": "domain",
    "type": "String",
    "description": "Applies given domain to URI set within the main string.",
    "examples": [
      "${'///path/page.html' @ domain='example.org'} -> //example.org/path/page.html",
      "${'http:///path/page.html' @ domain='example.org'} -> http://example.org/path/page.html",
      "${'http://www.example.com/path/page.html' @ domain='www.example.org'} -> http://www.example.org/path/page.html"
