<idea-plugin url="https://www.jetbrains.com/idea">
    <extensions defaultExtensionNs="com.intellij">

        <localInspection
                language="HTML"
                enabledByDefault="true"
                hasStaticDescription="true"
                implementationClass="com.aemtools.inspection.html.MessedDataSlyAttributeInspection"/>

        <localInspection
                language="HTML"
                enabledByDefault="true"
                hasStaticDescription="true"
                implementationClass="com.aemtools.inspection.html.RedundantDataSlyUnwrapInspection"/>

        <localInspection
                language="HTML"
                enabledByDefault="true"
                hasStaticDescription="true"
                implementationClass="com.aemtools.inspection.html.RedundantElInspection"/>

        <localInspection
                language="XML"
                enabledByDefault="true"
                hasStaticDescription="true"
                implementationClass="com.aemtools.inspection.xml.AemMissedCqNamespaceInspection"/>

        <implicitUsageProvider implementation="com.aemtools.codeinsight.xml.schema.CqNamespaceImplicitUsageProvider"/>
    </extensions>
</idea-plugin>
